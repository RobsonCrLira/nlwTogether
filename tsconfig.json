{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "typeRoots": [
      "./src/@types"
    ],
    "paths": {
      "@tag/*": [
        "./src/tag/*"
      ],
      "@user/*": [
        "./src/user/*"
      ],
      "@compliment/*": [
        "./src/compliment/*"
      ],
      "@interfaces/*": [
        "./src/interfaces/*"
      ],
      "@entities/*": [
        "./src/entities/*"
      ],
      "@tagCompliments/*": [
        "./src/tagCompliments/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@types/*": [
        "./src/@types/*"
      ],
      "@errors/*": [
        "./src/errors/*"
      ]
    }
  }
}
{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@entities/*": [
        "./src/entities/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@repositories/*": [
        "./src/repositories/*"
      ],
      "@interfaces/*": [
        "./src/interfaces/*"
      ],
      "@config/*": [
        "./src/config/*"
      ]
    }
  }
}